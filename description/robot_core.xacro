<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

<!-- BASE LINK -->

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="-0.25 0 0"/>
    </joint>

<!-- CHASSIS -->
    <link name="chassis">
    <visual>
        <origin xyz="0.35 0 0.075" rpy="0 0 0"/>
        <geometry>
            <box size="0.7 0.38 0.15"/>
        </geometry>
        <material name="white"/>
    </visual>
    <collision>
        <origin xyz="0.35 0 0.075" rpy="0 0 0"/>
        <geometry>
            <box size="0.7 0.38 0.15"/>
        </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.7" y="0.38" z="0.15">
        <origin xyz="0.35 0 0.075" rpy="0 0 0"/>
    </xacro:inertial_box>

</link>

<!-- LEFT WHEEL -->

<joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.215 0" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder length="0.05" radius="0.0775" />
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <geometry>
            <cylinder length="0.05" radius="0.0775" />
        </geometry>
    </collision>

    <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.0775">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>


</link>
<!-- RIGHT WHEEL -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.215 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.05" radius="0.0775" />
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.05" radius="0.0775" />
            </geometry>
            <material name="blue"/>
        </collision>
    </link>
    <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.0775">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

<!-- CASTER WHEEL -->

<joint name="caster_wheel_joint" type="fixed">
    <parent link="chassis"/>
    <child link="caster_wheel"/>
    <origin xyz="0.55 0 0" rpy="0 0 0"/>
</joint>

<link name="caster_wheel">
    <visual>
        <geometry>
            <sphere radius="0.0775" />
        </geometry>
        <material name="black"/>
    </visual>

    <collision>
        <geometry>
            <sphere radius="0.0775" />
        </geometry>
        <material name="black"/>
    </collision>
    <xacro:inertial_sphere mass="0.1" radius="0.0775">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_sphere>
    
</link>


</robot>
